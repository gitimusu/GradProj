<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.user.ca_simulation.MainActivity">


    <TextView
        android:id="@+id/textView_id"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/main_page"
        android:textAllCaps="true"
        android:textColor="@color/colorAccent"
        android:textSize="34sp"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/text_greeting"
        android:layout_alignRight="@+id/text_greeting"
        android:layout_alignEnd="@+id/text_greeting"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="220dp"
        android:layout_height="250dp"
        android:contentDescription="@android:string/ok"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:srcCompat="@drawable/robot2_icon"
        tools:targetApi="lollipop"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="496dp"
        android:layout_marginStart="496dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/text_greeting"
        android:layout_width="360dp"
        android:layout_height="42dp"
        android:text="@string/Greeting"
        android:textColor="@color/colorAccent"
        android:textSize="36sp"
        android:textStyle="italic"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView" />


</RelativeLayout>
